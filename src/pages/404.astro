---
import Base from "@/layouts/Base.astro";


// Puedes definir el título de la página 404 aquí
const pageTitle = "404 - Página no encontrada";
const metaDescription = "Lo sentimos, la página que buscas no existe.";

// --- ¡NUEVO!: Configurar noindex para la página 404 ---
const noindexPage = true; // <--- ¡Esto es clave para la 404!


// Props para el BaseLayout
const pageProps = {
  pageTitle: pageTitle, // <-- Pasamos el título para el h1 visible
  title: pageTitle, // <-- Pasamos el mismo título para la etiqueta <title> del navegador
  description: metaDescription,
  noindex: noindexPage,
};
---

<Base  {...pageProps} title="Page Not Found">
  <section class="section-sm text-center">
    <div class="container">
      <div class="row justify-center">
        <div class="sm:col-10 md:col-8 lg:col-6">
          <span class="text-[8rem] block font-bold text-text-dark dark:text-darkmode-text-dark">
            404
          </span>
          <h1 class="h2 mb-4">Página no encontrada</h1>
          <div class="content">
            <p>
              La página que busca puede haber sido eliminada, haber cambiado de nombre o no estar disponible temporalmente. o no esté disponible temporalmente.
            </p>
          </div>
          <a href="/" class="btn btn-primary mt-8">Ir a Inicio</a>
        </div>
      </div>
    </div>
  </section>
</Base>
